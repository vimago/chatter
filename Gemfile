source 'https://rubygems.org'

gem 'rails', '4.2.3'
group :development do
  gem 'sqlite3'
end

group :production, :staging do
  gem 'rails_12factor'
  gem 'pg'
end

gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'

gem 'jquery-rails'
gem 'turbolinks'
gem 'jbuilder', '~> 1.2'

group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end

gem 'private_pub'
gem 'thin'
